<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{{ preference('title') }}{% endblock %}</title>
        <meta name="keywords" content="{% block keywords %}{{ preference('keywords') }}{% endblock %}"/>
        <meta name="description" content="{% block description %}{{ preference('description') }}{% endblock %}"/>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
{% block stylesheets %}
        <link rel="shortcut icon" href="{{ asset('images/design/favicon.ico') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('styles/index.css') }}"/>
{% endblock %}
{% block javascripts %}
        <script type="text/javascript" src="{{ asset('scripts/jquery-1.9.1.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('scripts/jquery.form.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('scripts/jquery.simplemodal.1.4.4.min.js') }}"></script>
        <script type="text/javascript">
            function discount(product_name) {
                $.get('/discount', function (response){
                    $(response).modal({
                        opacity: 50,
                        overlayClose: true,
                        minHeight: 300, minWidth: 500,
                        closeHTML: '<a class="modalCloseImg" title="Закрыть"></a>'
                    });
                    $('input[name="client_product"]').val(product_name);
                });
                return false;
            }
        </script>
{% endblock %}
    </head>
    <body>
        <div class="{% block style %}default{% endblock %}">
            <div class="top">
                <a href="{{ path('index') }}" class="index"></a>
                <a href="{{ path('article') }}" class="articles"></a>
                <a href="{{ path('delivery') }}" class="delivery"></a>
                <a href="{{ path('contact') }}" class="about"></a>
                <a href="mailto:{{ preference('site_email') }}" class="email"></a>
                <div class="phone">
                    {{ preference('site_phone') }}
                </div>
                <div class="card">
                    {{ render(controller('AppBundle:Cart:info')) }}
                </div>
                <div class="search">
                    <form action="{{ path('search') }}" method="post">
                        <input type="text" class="text" name="text" value=""/>
                        <input type="submit" class="button" value=""/>
                    </form>
                </div>
            </div>
            <div class="inner">
                <div class="catalogue">
                    <div class="catalogue_top"></div>
                    <div class="catalogue_center">
{{ render(controller('AppBundle:Product:menu', {request: app.request})) }}
                    </div>
                    <div class="catalogue_bottom"></div>
                </div>
                <div class="content">
                    <div class="content_top"></div>
                    <div class="content_center">
{% block content %}{% endblock %}
                    </div>
                    <div class="content_bottom"></div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="footer">
                <div class="footer_top">
                    <a href="{{ path('index') }}">Силовые тренажеры BodySolid</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="{{ path('article') }}">Особенности</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="{{ path('contact') }}">Где купить</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="/subscribe">Прайс-лист</a>
                </div>
                <div class="footer_bottom">
                    Copyright &copy; {{ "now"|date("Y") }} Body Solid. All rights reserved. <a href="https://www.free-lance.ru/users/Mayber/" target="_blank">Дизайн - May Ber</a>
                </div>
                <div class="footer_counter">
                    <!--LiveInternet counter--><script type="text/javascript">document.write("<a href='http://www.liveinternet.ru/click' target=_blank><img src='http://counter.yadro.ru/hit?t14.2;r" + escape(document.referrer) + ((typeof(screen)=="undefined")?"":";s"+screen.width+"*"+screen.height+"*"+(screen.colorDepth?screen.colorDepth:screen.pixelDepth)) + ";u" + escape(document.URL) + ";" + Math.random() + "' border=0 width=88 height=31 alt='' title='LiveInternet: показано число просмотров за 24 часа, посетителей за 24 часа и за сегодн\я'><\/a>")</script><!--/LiveInternet-->
                </div>
            </div>
        </div>
    </body>
</html>
