{% set rawPrice = productItem.rawPrice(preference('rate')) %}
{% set finalPrice = productItem.finalPrice(preference('rate')) %}
                    <div class="product">
                        <div class="product-title">
                            <a href="{{ path('productItem', {categoryName: productItem.category.name, id: productItem.id}) }}">
                                {{ productItem.title }}
                            </a>
                        </div>
                        <div class="product-image">
{% if sale is defined %}
                            <a href="discount.php" onclick="return discount('{{ productItem.title }}')" class="discount">
                                <img src="{{ asset('images/discount.png') }}">
                            </a>
{% endif %}
                            <a href="{{ path('productItem', {categoryName: productItem.category.name, id: productItem.id}) }}">
                                <img src="{{ image(productItem.image).cropResize(140, 140) }}" />
                            </a>
                        </div>
{% if sale is not defined %}
                        <div class="product-description">
                            <div class="product-price">
{% if rawPrice != finalPrice %}
                                <s style="color: #666666">{{ rawPrice|number_format(0, '.', ' ') }} р.</s><br>
{% endif %}
                                <b>{{ finalPrice|number_format(0, '.', ' ') }} р.</b>
                            </div>
                            <div class="product-cart{% if cart().in(productItem.id) %} in-cart{% endif %}">
                                <a href="{{ path('cart_add', {id: productItem.id}) }}" onclick="return buyItem($(this))">
                                    <img src="{{ asset('images/basket.gif') }}" />
                                </a>
                            </div>
                        </div>
{% endif %}
                    </div>
